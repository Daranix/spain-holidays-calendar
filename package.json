{
  "name": "calendario-web",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server/server.mjs",
    "build": "ng build --configuration production && capacitor sync",
    "build:dev": "ng build --configuration development",
    "watch": "npm run build:dev -- --configuration development --watch",
    "dev": "ng serve --host 0.0.0.0 --proxy-config proxy.conf.json",
    "dev:ssr:watch": "concurrently \"npm run watch\" \"nodemon --watch dist/server dist/server/server.mjs\"",
    "android:dev": "npm run build:dev && capacitor sync android && capacitor run android --external && npm start",
    "biome": "biome",
    "capacitor": "capacitor",
    "ng": "ng",
    "generate-assets": "npx @capacitor/assets generate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.1",
    "@angular/common": "^18.0.1",
    "@angular/compiler": "^18.0.1",
    "@angular/core": "^18.0.1",
    "@angular/forms": "^18.0.1",
    "@angular/platform-browser": "^18.0.1",
    "@angular/platform-browser-dynamic": "^18.0.1",
    "@angular/platform-server": "^18.0.1",
    "@angular/router": "^18.0.1",
    "@angular/ssr": "^18.0.2",
    "@capacitor/android": "^5.7.4",
    "@capacitor/angular": "^2.0.3",
    "@capacitor/app": "^5.0.7",
    "@capacitor/core": "^5.7.4",
    "@capacitor/ios": "^5.7.4",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "minify-xml": "^4.4.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "valibot": "^0.29.0",
    "xpath": "^0.0.34",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.2",
    "@angular/cli": "^18.0.2",
    "@angular/compiler-cli": "^18.0.1",
    "@biomejs/biome": "1.6.4",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^5.7.4",
    "@types/express": "^4.17.21",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.12.5",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.4"
  }
}